        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Data_Binding.ToolsWindows"
        mc:Ignorable="d"
        Title="Assign Job Descriptions" Height="450" Width="900
